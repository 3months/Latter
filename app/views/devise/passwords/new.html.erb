<div class="player_sign_in well">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <fieldset>
      <legend><%= I18n.t('devise.passwords.new.heading') %></legend>


      <div class="control-group">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="form-actions">
        <%= f.submit I18n.t('devise.passwords.new.submit_button'), :class => 'btn btn-primary' %>
      </div>
    </fieldset>
  <% end %>
</div>


