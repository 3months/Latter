<% cache cache_key_for(game, 'listing') do %>
  <div class="row-fluid game">
    <div class="span3">
      <div class="thumbnail">
        <%= gravatar_for(game.winner, size:180) %> 
      </div>
    </div>

    <div class='span6 vs'>
      <h1>vs.</h1>
      <div class="label label-info">
        <%= game.complete? ? I18n.t('game.index.completed', :score => game.score) : I18n.t('game.index.challenged') %>
        <br />
      </div>
    </div>

    <div class="span3">
      <div class="thumbnail">
        <%= gravatar_for(game.loser, size:180) %> 
      </div>
    </div>
  </div>
<% end %>

