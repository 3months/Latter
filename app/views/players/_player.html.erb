<% cache cache_key_for(player, 'listing') do %>
  <div class="row-fluid player" id="<%= dom_id(player) %>">
    <div class="span2">
      <div class="thumbnail">
        <%= image_tag player.gravatar_url(:size => 200) %>
      </div>
    </div>

    <div class="span10">
      <h3><%= player.name %></h3>

      <div class="row-fluid">
        <div class="span5"></div>
        <div class="span5"></div>
        <div class="span2">
          <%= ranking(player) %>
        </div>
      </div>
    </div>
  </div>
<% end %>

