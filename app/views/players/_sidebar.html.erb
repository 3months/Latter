<% if current_player %>
  <% cache cache_key_for(current_player, "profile") do %>
    <%= sync :partial => 'profile', :resource => current_player %>
    <%= render :partial => 'activities/activity_stream' %>
  <% end %>
<% else %>
  <% cache cache_key_for("sections", "about") do %>
    <%= render 'pages/sections/about' %>
  <% end %>
<% end %>
