.row
  %form.span6.well.offset3{:method => 'post', :action => !@player.new? ? "/player/update" : "/player"}
    %fieldset
      %legend= !@player.new? ? "Editing #{@player.name}" : "New Player"
      .control-group
        %label{:for => 'player[name]'} Name
        .controls
          %input{:type => 'text', :name => 'player[name]', :value => @player.name}
      .control-group
        %label{:for => 'player[email]'} Email
        .controls
          .input-prepend
            .add-on
              %i.icon-envelope
            %input{:type => 'email', :name => 'player[email]', :value => @player.email}
      .control-group
        %label{:for => 'player[password]'} Password
        .controls
          %input{:type => 'password', :name => 'player[password]'}
      .control-group
        %label{:for => 'player[password_confirmation]'} Password Confirmation
        .controls
          %input{:type => 'password', :name => 'player[password_confirmation]'}

      .form-actions
        %button.btn.btn-primary.btn-large{:type => 'submit'} Save
        %button.btn.btn-large{:type => 'reset'} Clear

