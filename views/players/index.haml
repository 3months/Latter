.row-fluid
  - if current_player
    .span3.sidebar
      = haml(:"players/profile")
  - else
    .span3.sidebar
      %a.btn.large{:href => "/login"} Login to see your Profile here
  .span9.players
    - @players.each do |player|
      = haml(:"players/player", :locals => {:player => player})

#enter_score.modal{:style => "display:none;"}
  .modal-header
    %a.close{:"data-dismiss" => "modal"} x
    %h3 Complete Match
  %form{:method => "post", :action => "/"}
    .modal-body
      %fieldset
        .row
          .span2
            .control-group#from_player_score
              %label{:for => "from_player_score"}
              .controls
                .thumbnail
                  %img
                  %input{:type => 'number', :maxlength => 3, :name => 'challenge[from_player_score]'}
          .span1.vs
            %h3 vs.
          .span2
            .control-group#to_player_score
              %label{:for => "to_player_score"}
              .controls
                .thumbnail
                  %img
                  %input{:type => 'number', :maxlength => 3, :name => 'challenge[to_player_score]'}
    .modal-footer
      %button.btn.btn-primary{:type => "submit"} Submit Score
      %a.btn{:"data-dismiss" => "modal"} Cancel
